.header-right {
  display: inline-block;
  float: right;
  margin-top: 5px;
  margin-right: 15px;

  span:last-child {
    cursor: pointer;
    &:hover {
      color: #7fc7da;
    }
  }

  span {
    font-size: 0.35em;
    font-weight: 600;
  }

  img {
    border-radius: 50%;
    height: 40px;
    width: 40px;
    margin-top: 5px;
    margin-left: 10px;
  }
}

.user {
  position: relative;
  padding: 0;
  float: right;

  &:hover {
    .user-profile {
      visibility: visible;
      opacity: 1;
    }
  }
}

.user-profile {
  visibility: hidden;
  opacity: 0;
  position: absolute;
  right: 0;
  background: rgba(17, 148, 246, 0.8);
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  min-width: 130px;
  height: 35px;
  border-radius: 5px;
  z-index: 2;
  transition: visibility 0s, opacity 0.5s linear;
  span {
    line-height: 2em;
  }

}
