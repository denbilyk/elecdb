.import-data-table {
  width: 2770px;
}

.cell {
  float: left;
  padding: 5px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-left: 10px;
}

.import-data-table .mui-checkbox {
  margin-top: 0 !important;
  margin-bottom: 0 !important;
}

.btn-sel-inverse {
  width: 20px;
  height: 18px !important;
  padding: 0 !important;
  line-height: 15px !important;
  margin-left: -4px;
  margin-top: 2px !important;
}

.file_upload {
  display: inline-block;
  margin-right: 30px;
  position: relative;
  width: 250px;
  height: 35px;

  input[type=file] {
    display: inline-block;
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    cursor: pointer;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  div {
    position: relative;
    top: 8px;
    cursor: pointer;
    border: 1px solid rgba(0, 0, 0, 0.1);
    opacity: 0.5;
    border-radius: 4px;
    padding-left: 10px;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
    transition: background 0.2s;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

}
