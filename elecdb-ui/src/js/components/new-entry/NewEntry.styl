.div-form-new {
  width: 500px;
  margin: auto;
  margin-top: 10px;
}

.form-new {
  margin-top: 10px;
}

.popup-error {
  height: auto;
  background: #F44336;
  color: white;
  font-size: 15px;
  line-height: 30px;
  padding-left: 20px;
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.16), 0 0px 2px 0 rgba(0, 0, 0, 0.12);
  margin-bottom: 10px;
  border-radius: 5px;
  font-weight: bold;
}

.popup-info {
  height: auto;
  background: #9CCC65;
  color: white;
  font-size: 15px;
  line-height: 30px;
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.16), 0 0px 2px 0 rgba(0, 0, 0, 0.12);
  margin-bottom: 10px;
  border-radius: 5px;
  font-weight: bold;
  position: absolute;
  left: 43%;
  padding-left: 30px;
  padding-right: 30px;
  z-index: 2;
  top: 70px;
  transition: all 0.3s ease-in;
}


.popup-warn {
  height: auto;
  background: #FFC107;
  color: white;
  font-size: 15px;
  line-height: 30px;
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.16), 0 0px 2px 0 rgba(0, 0, 0, 0.12);
  margin-bottom: 10px;
  border-radius: 5px;
  font-weight: bold;
  position: absolute;
  left: 33%;
  padding-left: 30px;
  padding-right: 30px;
  z-index: 2;
  top: 60px;
  transition: all 0.3s ease-in;
}



.fadein {
  opacity: 0;
  transition: opacity 1.5s;
}

#app.loaded .fadein {
  opacity: 1;
}